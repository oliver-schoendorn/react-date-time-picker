{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "baseUrl": "./src",
    "outDir": "./dist/esm",
    "moduleResolution": "node",
    "noEmit": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "importHelpers": false,
    "esModuleInterop": true
  },
  "include": [ "./src/**/*" ],
  "exclude": [ "**/*.spec.ts"]
}
